<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <FrameLayout
            android:id="@+id/MemoDetailHeader_Layout"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="日誌單筆"
                android:id="@+id/MemoDetailHeader"
                android:textSize="22dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#5599FF"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/MemoDetail_backImg"
                android:src="@drawable/arrow_back_white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/click_effect_general" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/MemoDetailMap_Layout"
            android:layout_below="@id/MemoDetailHeader_Layout">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_recordMemo"
                tools:context="com.example.wei.travel.RecordMemoDetailActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                tools:ignore="MissingPrefix"
                map:cameraTargetLat="24.029548"
                map:cameraTargetLng="121.276745"
                map:cameraZoom="6"
                android:layout_gravity="right|bottom" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/MemoMapEnlarge_img"
                android:src="@drawable/memo_enlarge"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:longClickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:id="@+id/MemoDetailTitle"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black" />

        </FrameLayout>

        <com.travel.Utility.View.ExpandableHeightGridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MemoDetail_gridView"
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="50pt"
            android:stretchMode="columnWidth"
            android:layout_below="@+id/MemoDetailMap_Layout" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/MemoDetail_gridView"
            android:id="@+id/MemoContent_listView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>