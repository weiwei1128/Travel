<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordmemo_testLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flyingtravel.RecordMemoActivity">

    <FrameLayout
        android:id="@+id/recordmemo_Layout"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/recordmemoHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5599FF"
            android:gravity="center_vertical|center_horizontal"
            android:text="旅遊日誌"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/recordmemo_backImg"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/click_effect_general"
            android:src="@drawable/arrow_back_white" />

        <TextView
            android:id="@+id/recordmemo_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recordmemo_btn_Layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordmemo_Layout"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/record_travel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:text="旅遊軌跡"
            android:textSize="20dp" />

        <Button
            android:id="@+id/record_memo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:text="旅遊日誌"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/LastOneDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordmemo_btn_Layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="LastOneDate"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/recordmemo_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LastOneDate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
