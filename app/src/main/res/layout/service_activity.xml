<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/service_Layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#5599FF"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/service_backImg"
            android:src="@drawable/arrow_back_white"
            android:background="@drawable/click_effect_general"
            android:layout_marginLeft="10dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="客服專線"
            android:id="@+id/serviceHeader"
            android:textSize="22dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#5599FF"
            android:textColor="#FFFFFF"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/service_moreImg"
            android:src="@drawable/navigation_share"
            android:background="@drawable/click_effect_general"
            android:clickable="true"
            android:layout_marginRight="10dp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/service_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_Layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/service_Layout"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="飛行家服務專線"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="20dp" />

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(02)2562-3919"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服務時間：10-21"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="線上訊息"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:padding="3dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:id="@+id/service_edit"
                    android:background="@color/white"
                    android:layout_margin="1dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="top"
                    android:gravity="top" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:background="@color/yellow"
        android:id="@+id/service_send_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="送    出"
            android:layout_gravity="center"
            android:gravity="center_vertical|center|center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:clickable="false"
            android:background="@drawable/click_effect_general" />
    </LinearLayout>

</RelativeLayout>
