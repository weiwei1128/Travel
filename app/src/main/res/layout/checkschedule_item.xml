<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:30"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="1"
            android:id="@+id/schedule_no_text"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:textColor="@color/peach"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/peach"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:layout_gravity="top"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/border_rec_corner_whiteblue"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家"
                android:id="@+id/schedule_where_text"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textColor="#EE7700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:id="@+id/schedule_totaltime_text"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:id="@+id/schedule_addr_text"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/schedule_way_img"
                android:src="@drawable/icon_car"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:id="@+id/schedule_time_text"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/rightarrow"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/click_effect_general"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>