<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#12345678"
        android:id="@+id/scheduleitem_no"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016年3月10日"
        android:id="@+id/shoprecorditem_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="＄"
        android:id="@+id/shoprecorditem_money"
        android:textColor="@color/peach"
        android:textSize="15dp"
        android:layout_below="@+id/scheduleitem_no"
        android:layout_alignLeft="@+id/scheduleitem_no"
        android:layout_alignStart="@+id/scheduleitem_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已付款"
        android:id="@+id/shoprecorditem_state"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:padding="3dp"
        android:textSize="15dp"
        android:layout_below="@+id/shoprecorditem_money"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姓名： \n電話： \n"
        android:id="@+id/shoprecorditem_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_alignTop="@+id/shoprecorditem_state"
        android:layout_alignLeft="@+id/shoprecorditem_money"
        android:layout_alignStart="@+id/shoprecorditem_money"
        android:layout_marginBottom="5dp" />
</RelativeLayout>