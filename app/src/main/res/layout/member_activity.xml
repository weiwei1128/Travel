<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wei.travel.MemberActivity"
    android:background="@color/light_gray">
    <LinearLayout
        android:id="@+id/member_Layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#5599FF"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="會員"
            android:id="@+id/memberHeader"
            android:textSize="22dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#5599FF"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/member_Layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/member_picture"
                android:src="@drawable/moredetail"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="木村拓哉"
                android:id="@+id/member_name_text"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_phone"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0912345678"
                android:id="@+id/member_phone_text"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_mail"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/member_email_text"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_address"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:id="@+id/member_addr_text"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/member_share_layout"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_share"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:id="@+id/member_share_text"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/member_share_Img"
                android:src="@drawable/rightarrow"
                android:layout_gravity="center"
                android:background="@drawable/click_effect_general"
                android:clickable="true"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/member_love_layout"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_favourite"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的最愛"
                android:id="@+id/member_love_text"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/member_love_Img"
                android:src="@drawable/rightarrow"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/click_effect_general"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/member_value_layout"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/member_opinion"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="給評價"
                android:id="@+id/member_value_text"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/member_value_Img"
                android:src="@drawable/rightarrow"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/click_effect_general"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:id="@+id/member_advice_layout"
            android:background="@color/white"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top|center"
                android:src="@drawable/member_comment"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我有意見"
                android:id="@+id/member_advice_text"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/member_advice_Img"
                android:src="@drawable/rightarrow"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:background="@drawable/click_effect_general"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:id="@+id/member_logout_layout"
            android:background="@color/white"
            android:layout_marginBottom="2dp" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top|center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登出"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/click_effect_general"
            android:clickable="true"
            android:id="@+id/member_home_layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/member_home_img"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/click_home_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首頁"
                android:layout_gravity="center"
                android:id="@+id/member_home_text"
                android:textColor="@color/gray"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/tab_selected_member" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="會員"
                android:layout_gravity="center"
                android:textColor="#0044BB"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/click_effect_general"
            android:id="@+id/member_shoprecord_layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/member_shoprecord_img"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/record_img_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="訂購紀錄"
                android:layout_gravity="center"
                android:id="@+id/member_shoprecord_text"
                android:textColor="@color/gray"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/click_effect_general"
            android:id="@+id/member_more_layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/member_more_img"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/more_img_click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_gravity="center"
                android:id="@+id/member_more_text"
                android:textColor="@color/gray"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
