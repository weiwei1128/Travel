<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.wei.travel.BuyItemDetailActivity">

    <LinearLayout
        android:id="@+id/buyitem_Layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#5599FF"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/buyitem_backImg"
            android:src="@drawable/arrow_back_white"
            android:layout_marginLeft="10dp"
            android:background="@drawable/click_effect_general" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="伴手禮名稱"
            android:id="@+id/buyItemHeader"
            android:textSize="22dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#5599FF"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/buyitem_Img"
        android:layout_below="@+id/buyitem_Layout"/>

    <LinearLayout
        android:id="@+id/buyitemheader_Layout"
        android:layout_below="@id/buyitem_Img"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/circle_shape"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是物品名稱"
            android:id="@+id/buyitemName_Text"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/buyitemMore_Img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/icon_share"
            android:layout_marginRight="10dp"
            android:background="@drawable/click_effect_general"
            android:clickable="true" />

        <ImageView
            android:id="@+id/buyitemAdd_Img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/icon_shopping"
            android:layout_marginRight="10dp"
            android:background="@drawable/click_effect_general" />
    </LinearLayout>

    <View
        android:layout_below="@id/buyitemheader_Layout"
        android:id="@+id/buyitem_View"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/yellow"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp" />

    <ScrollView
        android:layout_below="@id/buyitem_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品介紹"
            android:id="@+id/buyitemDetail_text"
            android:textSize="16dp"
            android:textColor="@color/gray" />
    </ScrollView>

</RelativeLayout>
